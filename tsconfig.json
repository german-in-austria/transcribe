{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "es2015",
        "lib": ["webworker", "es2015", "dom"],
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "baseUrl": "src",
        "types": [
          "webrtc"
        ],
        "typeRoots": [
          "node_modules/@types",
          "manual_typings"
        ],
        "paths": {
            "lodash/*": [
              "node_modules/@types/lodash-es/*"
            ]
        }
    },
    "exclude": [
      "./src/**/wasm"
    ],
    "include": [
        "./src/**/*"
    ]
}
