{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "module": "es2015",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "baseUrl": "src",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@util/*": [
                "util/*"
            ],
            "@api" : [
                "api"
            ],
            "@api/*": [
                "api/*"
            ],
            "@store/*": [
                "store/*"
            ],
            "@models/*": [
                "models/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
